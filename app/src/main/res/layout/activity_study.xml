<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Study">

    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/englishWord"
        app:backgroundTint="#FF8F63"
        android:background="@drawable/radius3"
        android:elevation="4dp"
        android:padding="20dp"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="110dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/translation"
        android:layout_below="@id/englishWord"
        android:layout_marginTop="50dp"
        android:background="@drawable/radius"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:fontFamily="@font/mainfont"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/checkBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        app:backgroundTint="#FF8F63"
        android:background="@drawable/button_background"
        android:elevation="4dp"
        android:drawableLeft="@drawable/baseline_check_24"
        android:text="Check"
        android:textStyle="bold"
        android:layout_below="@id/translation"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/checkBtn"
        android:src="@drawable/study" />


</RelativeLayout>